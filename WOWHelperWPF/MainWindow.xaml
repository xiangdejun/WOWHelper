        <Button Grid.Row="0" Name="BtnRefresh" Content="Refresh" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="176,6,0,0" Click="btnRefresh_Click" Grid.Column="1" />
        <TextBox Name="txtHeroName" HorizontalAlignment="Left" 
                 Margin="10,10,0,0" TextWrapping="Wrap" Text="别怕有我" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txtServerName" HorizontalAlignment="Left"
                 Margin="16,10,0,0" TextWrapping="Wrap" Text="阿卡玛" VerticalAlignment="Top" Width="120" Grid.Column="1"/>

        <Button Grid.Row="0" Name="BtnSave" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100"  Margin="348,6,0,0" Click="BtnSave_Click" Grid.Column="1" />


        <Button Grid.Row="0" Name="BtnLoad" Content="Load" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="348,41,0,0" Click="BtnLoad_Click" Grid.Column="1" Grid.RowSpan="2" />

        <Button Grid.Row="0" Name="BtnLoadHtml" Content="Load Html" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="500,41,0,0" Click="BtnLoadHtml_Click" Grid.Column="1" Grid.RowSpan="2" />

